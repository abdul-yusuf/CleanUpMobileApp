<SignUpScreenView>
    md_bg_color: app.theme_cls.backgroundColor
    MDScrollView:
#        pos_hint: {'center_x': .5, 'center_y': .2}
        size: root.width, root.height - dp(220)
        MDBoxLayout:
            cols: 1
            size_hint_y: None
            height: self.minimum_height + dp(180)
            orientation: 'vertical'
            spacing: dp(20)

            MDLabel:
#                adaptive_height: True
#                size_hint_y: .8
                text: 'Enter your Login details'
                pos_hint: {'center_x': .5, 'center_y': .58}
                halign: 'center'
        #        font_size: '28sp'

            MDBoxLayout:
                adaptive_height: True
                orientation: 'vertical'
                spacing: dp(28)
                MDTextField:
                    id: full_name
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    size_hint_x: .8
                    MDTextFieldHintText:
                        text: 'Enter Fullname'

                MDTextField:
                    id: email
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    size_hint_x: .8
                    MDTextFieldHintText:
                        text: 'Enter Email'

                MDTextField:
                    id: phone_number
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    size_hint_x: .8
                    input_type: 'number'
                    max: 11
                    MDTextFieldHintText:
                        text: 'Enter Phone Number'

                MDTextField:
                    id: password
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    size_hint_x: .8
                    MDTextFieldHintText:
                        text: 'Enter Password'

                MDTextField:
                    id: password2
                    size_hint_x: .8
                    pos_hint: {'center_x': .5, 'center_y': .4}
                    MDTextFieldHintText:
                        text: 'Enter Password'


            MDButton:
                pos_hint: {'center_x': .5, 'center_y': .28}
                theme_width:  'Custom'
                size_hint_x: .8
                radius: dp(6)
                style: 'filled'
                on_press: root.controller.signup()
                MDButtonText:
                    text: 'Signup'
                    pos_hint: {'center_x': .5, 'center_y': .5}

            MDBoxLayout:
                pos_hint: {'center_x': .5, 'center_y': .5}
                size_hint_x: .8
                MDLabel:
                    text: 'By clicking you agree with our Terms and Condition'

            MDButton:
                pos_hint: {'center_x': .75, 'center_y': .24}
                style: 'text'
                on_press: app.add_screen('login screen')
                MDButtonText:
                    text: 'Have an Account?'

