<SecondOnboardingScreenView>
    md_bg_color: app.theme_cls.backgroundColor
    MDButton:
        pos_hint: {'center_x': .9, 'top': .98}
        style: 'text'
        on_press: app.add_screen('third onboarding screen')
        MDButtonText:
            text: 'Skip'

    MDButton:
        pos_hint: {'center_x': .1, 'top': .98}
        style: 'text'
        on_press: app.nav.prev()
        MDButtonIcon:
            icon: 'arrow-left'

    Image:
        source: 'assets/images/Mask group.png'
        size_hint: .5, .5
        pos_hint: {'center_x': .5, 'center_y': .55}

    MDLabel:
        pos_hint: {'center_y': .36}
        halign: 'center'
        text: 'Clean up and earn'
        theme_font_size: 'Custom'
        font_size: '22sp'
        bold: True
        markup: True


    MDCard:
        size_hint: None, None
#        adaptive_size: True
        pos_hint: {'center_x': .5, 'center_y': .15}
        radius: self.height/2 + dp(18)
        on_press: app.add_screen('third onboarding screen')
        Image:
            source: 'assets/images/Group6-1.png'
            size_hint: .4, .4
            pos_hint: {'center_x': .5, 'center_y': .5}
