<PasswordResetScreenView>
    md_bg_color: app.theme_cls.backgroundColor

    MDLabel:
        markup: True
        text: 'To Rest you password \n Enter your Email address'
        pos_hint: {'center_x': .5, 'center_y': .58}
        halign: 'center'
#        font_size: '28sp'

    MDTextField:
        pos_hint: {'center_x': .5, 'center_y': .5}
        size_hint_x: .8
        MDTextFieldHintText:
            text: 'Enter Email'

    MDButton:
        pos_hint: {'center_x': .5, 'center_y': .4}
        theme_width:  'Custom'
        size_hint_x: .8
        radius: dp(6)
        style: 'filled'
        MDButtonText:
            text: 'Login'
            pos_hint: {'center_x': .5, 'center_y': .5}

