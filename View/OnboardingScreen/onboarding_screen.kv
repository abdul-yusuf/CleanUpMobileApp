<OnboardingScreenView>
    md_bg_color: app.theme_cls.backgroundColor
    MDButton:
        pos_hint: {'center_x': .9, 'top': .98}
        style: 'text'
        MDButtonText:
            text: 'Skip'


    Image:
        source: 'assets/images/Group8.png'
        size_hint: .5, .5
        pos_hint: {'center_x': .5, 'center_y': .55}


    MDCard:
        size_hint: None, None
#        adaptive_size: True
        pos_hint: {'center_x': .5, 'center_y': .15}
        radius: self.height/2 + dp(18)
        on_press: app.add_screen('second onboarding screen')
        Image:
            source: 'assets/images/Group6.png'
            size_hint: .4, .4
            pos_hint: {'center_x': .5, 'center_y': .5}
