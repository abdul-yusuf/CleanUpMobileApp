<OtpScreenView>
    md_bg_color: app.theme_cls.backgroundColor
    phone_last_two_digit: 82
    MDLabel:
        markup: True
        text: f'Enter the verification code \n we send to +234*******{root.phone_last_two_digit}'
        pos_hint: {'center_x': .5, 'center_y': .58}
        halign: 'center'
#        font_size: '28sp'

    MDBoxLayout:
        spacing: dp(10)
        padding: dp(45)

        MDTextField:
            id: txt1
            on_text: txt2.focus=True
            pos_hint: {'center_x': .5, 'center_y': .5}
            size_hint_x: .1
            theme_font_size: 'Custom'
            font_size: '32sp'

        MDTextField:
            id: txt2
            on_text: txt3.focus=True
            pos_hint: {'center_x': .5, 'center_y': .5}
            size_hint_x: .1
            theme_font_size: 'Custom'
            font_size: '32sp'

        MDTextField:
            id: txt3
            on_text: txt4.focus=True
            pos_hint: {'center_x': .5, 'center_y': .5}
            size_hint_x: .1
            theme_font_size: 'Custom'
            font_size: '32sp'

        MDTextField:
            id: txt4
            on_text: self.focus=False
            pos_hint: {'center_x': .5, 'center_y': .5}
            size_hint_x: .1
            theme_font_size: 'Custom'
            font_size: '32sp'

    MDButton:
        pos_hint: {'center_x': .5, 'center_y': .4}
        theme_width:  'Custom'
        size_hint_x: .8
        radius: dp(6)
        style: 'filled'
        MDButtonText:
            text: 'Verify'
            pos_hint: {'center_x': .5, 'center_y': .5}

    MDButton:
        pos_hint: {'center_x': .75, 'center_y': .34}
        style: 'text'
        MDButtonText:
            text: 'Resend OTP'