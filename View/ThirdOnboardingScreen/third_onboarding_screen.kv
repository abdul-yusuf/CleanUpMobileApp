<ThirdOnboardingScreenView>
    md_bg_color: app.theme_cls.backgroundColor
    MDButton:
        pos_hint: {'center_x': .9, 'top': .98}
        style: 'text'
        on_press: app.add_screen('login screen')
        MDButtonText:
            text: 'Skip'

    MDButton:
        pos_hint: {'center_x': .1, 'top': .98}
        style: 'text'
        on_press: app.nav.prev()
        MDButtonIcon:
            icon: 'arrow-left'

    Image:
        source: 'assets/images/IMG_37.png'
        size_hint: .8, .8
        pos_hint: {'center_x': .5, 'center_y': .6}

    MDLabel:
        pos_hint: {'center_y': .38}
        halign: 'center'
        text: 'Join the revolutional system in \n waste management and \n recycling'
        markup: True

    MDButton:
        pos_hint: {'center_x': .5, 'center_y': .28}
        theme_width:  'Custom'
        size_hint_x: .8
        radius: dp(6)
        style: 'filled'
        on_press: app.add_screen('sign up screen')
        MDButtonText:
            text: 'Get started'
            pos_hint: {'center_x': .5, 'center_y': .5}

    MDBoxLayout:
        pos_hint: {'center_x': .5, 'center_y': .24}
        adaptive_size: True
        MDLabel:
            halign: 'left'
            adaptive_size: True
            text: 'Already have an account?'

        MDButton:
            style: 'text'
            on_press: app.add_screen('login screen')
            MDButtonText:
                text: 'Login'
                pos_hint: {'center_x': .5, 'center_y': .24}
