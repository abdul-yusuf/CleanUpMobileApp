<LoginScreenView>
    md_bg_color: app.theme_cls.backgroundColor

    MDLabel:
        text: 'Enter your Login details'
        pos_hint: {'center_x': .5, 'center_y': .58}
        halign: 'center'
#        font_size: '28sp'

    MDTextField:
        id: email
        pos_hint: {'center_x': .5, 'center_y': .5}
        size_hint_x: .8
        MDTextFieldHintText:
            text: 'Enter Email/Number'

    MDTextField:
        id: password
        size_hint_x: .8
        password: True
        pos_hint: {'center_x': .5, 'center_y': .4}
        MDTextFieldHintText:
            text: 'Enter Password'


    MDButton:
        pos_hint: {'center_x': .5, 'center_y': .28}
        theme_width:  'Custom'
        size_hint_x: .8
        radius: dp(6)
        style: 'tonal'
        on_press: root.controller.login()
        MDButtonText:
            text: 'Login'
            pos_hint: {'center_x': .5, 'center_y': .5}

    MDButton:
        pos_hint: {'center_x': .75, 'center_y': .24}
        style: 'text'
        on_press: app.add_screen('password reset screen')
        MDButtonText:
            text: 'Forget Password'